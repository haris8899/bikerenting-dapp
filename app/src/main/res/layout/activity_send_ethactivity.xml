<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WalletManagement.SendETHActivity">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send ETH"
        android:layout_margin="10dp"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/SendEtherAddressTXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Recipent Account Address"
        android:minHeight="48dp"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/EnterEthtosendTXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Amount(ETH)"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textSize="15dp" />

    <Button
        android:id="@+id/SendEthbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send ETH"
        android:layout_margin="10dp"
        android:layout_gravity="right"/>
</LinearLayout>